@page "/"
@inject NavigationManager nav
@rendermode InteractiveServer


<PageTitle>Home</PageTitle>


<h1>Bienvenido/a </h1>


<div class="container">
    <div class="container_content">
        <h3>¡Bienvenido de nuevo!</h3>
        <h2>Explora todo lo que puedes hacer</h2>

        <div class="content_funciones">
            <button @onclick="() => {nav.NavigateTo(navigationPublicaciones);}" style="background-color:#0094ff; color:white;">Ver Publicaciones</button>
            <button @onclick="() => {nav.NavigateTo(navigationLogin);}" style="background-color:#2d9ec0; color:white;">Iniciar Sesi&oacute;n</button>
            <button @onclick="() => {nav.NavigateTo(navigationRegistrar);}" style="background-color:#06081c; color:white;">Registrate</button>
        </div>
    </div>
</div>
@code{
    string navigationPublicaciones = "/pContenidoLector";
    string navigationRegistrar = "/Register";
    string navigationLogin = "/Login";
}
<style>
    body {
        font-family: "Poppins", sans-serif;
    }

    .container {
        min-height: 100vh;
        padding-inline: 1rem;
        display: grid;
        overflow: hidden;
    }

    .container_content {
        width: 100%;
        padding-block: 2rem;
    }

        .container_content h2 {
            margin-bottom: 1rem;
            font-size: 2.5rem;
            font-weight: 600;
            color: rgba(4, 20, 102, 0.8);
        }

        .container_content h3 {
            font-size: 1.2rem;
            font-weight: 600;
            color: #000000;
        }

    .content_funciones {
        padding: 5px;
    }

        .content_funciones button {
            margin: 10px;
            height: 60px;
            width: 500px;
        }
</style>